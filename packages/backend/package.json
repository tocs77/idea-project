{
  "name": "@idea/backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "tsx watch ./src/server.ts",
    "build-ts": "rimraf ./build && tsc",
    "copy:emails": "copyfiles -u 1 ./src/emails/dist/**/*.html ./build",
    "email:build": "rimraf ./src/emails/dist && mkdirp ./src/emails/dist && mjml ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "build": "npm run build-ts && npm run email:build && npm run copy:emails",
    "check:types": "tsc --noEmit",
    "check": "biome check",
    "check:fix": "biome check --fix",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@trpc/server": "^10.45.2",
    "@types/nodemailer": "^6.4.17",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.2",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mjml": "^4.15.3",
    "nodemailer": "^6.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "typescript": "^5.7.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.14",
    "@types/node": "^22.10.2",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "copyfiles": "^2.4.1",
    "mkdirp": "^3.0.1",
    "prisma": "^6.2.1",
    "rimraf": "^6.0.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  }
}

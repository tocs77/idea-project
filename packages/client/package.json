{
  "name": "@idea/client",
  "version": "0.1.0",
  "homepage": "/",
  "private": true,
  "type": "module",
  "dependencies": {
    "@idea/backend": "1.0.0",
    "@tanstack/react-query": "^4.36.1",
    "@trpc/client": "^10.45.2",
    "@trpc/react-query": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/react-infinite-scroller": "^1.2.5",
    "date-fns": "^4.1.0",
    "formik": "^2.4.6",
    "include-media": "^2.0.0",
    "npm": "^11.0.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.5.0",
    "react-infinite-scroller": "^1.2.6",
    "react-router": "^7.1.1",
    "reset-css": "^5.0.2",
    "sass": "^1.83.1",
    "superjson": "^2.2.2",
    "typescript": "^5.7.2",
    "usehooks-ts": "^3.1.1",
    "zod": "^3.24.1",
    "zod-formik-adapter": "^1.3.0"
  },
  "scripts": {
    "start": "vite --host",
    "build": "vite build",
    "format": "biome format --write ./src",
    "check:types": "tsc --noEmit",
    "check:coverage": "type-coverage --detail",
    "test:unit": "jest --config ./config/jest/jest.config.ts --watch",
    "check": "biome check",
    "check:fix": "biome check --fix",
    "check:fix:unsafe": "biome check --fix --unsafe",
    "check:style": "stylelint ./src/**/*.{css,scss}",
    "check:style:fix": "stylelint ./src/**/*.css --fix",
    "test:commit": "jest --config ./config/jest/jest.config.ts",
    "storybook": "storybook dev -p 6006 --no-open",
    "storybook:build": "storybook build ",
    "test:ui": "loki test --host 192.168.1.33",
    "test:ui:mac": "loki test",
    "test:ui:ok": "loki approve",
    "test:ui:ci": "loki --requireReference --trace-warnings --reactUri file:./storybook-static",
    "test:ui:report": "npm run test:ui:json && npm run test:ui:html",
    "test:ui:json": "node scripts/generate-visual-json-report.cjs",
    "test:ui:html": "reg-cli --from .loki/report.json --report .loki/report.html",
    "prepare": "husky"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "loki": {
    "chromeSelector": "body > *",
    "chromeConcurrency": 2,
    "chromeLoadTimeout": 10000,
    "fetchFailIgnore": "/api/.+$",
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1920,
        "height": 1080,
        "deviceScaleFactor": 1,
        "mobile": false
      },
      "chrome.iphone7": {
        "target": "chrome.docker",
        "preset": "iPhone 7"
      }
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/lodash.debounce": "^4.0.9",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react-test-renderer": "^19.0.0",
    "reg-cli": "^0.18.10",
    "rollup-plugin-visualizer": "^5.12.0",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^14.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "type-coverage": "^2.29.7",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^6.0.3",
    "vite-plugin-circular-dependency": "^0.5.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
